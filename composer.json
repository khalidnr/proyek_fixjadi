{
    "name": "meyudha/project",
    "description": "DevOps Project",
    "type": "project",
    "require": {
        "php": ">=8.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "scripts": {
        "test": "phpunit --testdox",
        "cs-check": "phpcs --standard=PSR12 .",
        "cs-fix": "phpcbf --standard=PSR12 ."
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    }
}